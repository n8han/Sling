<ivysettings>
  <settings defaultResolver="friday-chain"/>
  <include url="${ivy.default.settings.dir}/ivysettings-public.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-shared.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-local.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-main-chain.xml"/>
  <include url="${ivy.default.settings.dir}/ivysettings-default-chain.xml"/>
  <resolvers>
    <ibiblio name="databinder-snapshot" m2compatible="true" root="http://databinder.net/snapshot/"/>
    <ibiblio name="scala-tools" m2compatible="true" root="http://scala-tools.org/repo-releases"/>
    <chain name="friday-chain" returnFirst="true" checkmodified="true">
      <resolver ref="local"/>
      <resolver ref="shared"/>
      <resolver ref="main"/>
      <resolver ref="databinder-snapshot"/>
      <resolver ref="scala-tools"/>
    </chain>
  </resolvers>
</ivysettings>
